{
    "AZGlobalAdmin": {
        "meaning": "This edge indicates the principal has the Global Admin role active against the target tenant. In other words, the principal is a Global Admin. Global Admins can do almost anything against almost every object type in the tenant, this is the highest privilege role in Azure.",
        "common": "",
        "windows": {
            "PowerZure": [
                {
                    "order": 1,
                    "command": "Set-AzureElevatedPrivileges",
                    "description": "Grant yourself the 'User Access Administrator' role in Azure RBAC"
                },
                {
                    "order": 2,
                    "command": "Add-AzRoleAssignment -SignInName user@domain.com -RoleDefinitionName Owner -Scope /subscriptions/subscription-id",
                    "description": "Add yourself as Owner to all subscriptions in the tenant"
                }
            ],
            "AzurePowerShell": [
                {
                    "order": 1,
                    "command": "Connect-AzAccount",
                    "description": "Connect to Azure account"
                },
                {
                    "order": 2,
                    "command": "Set-AzContext -SubscriptionId 'subscription-id'",
                    "description": "Set context to target subscription"
                },
                {
                    "order": 3,
                    "command": "New-AzRoleAssignment -SignInName 'user@domain.com' -RoleDefinitionName 'Owner' -Scope '/'",
                    "description": "Assign Owner role at root scope"
                }
            ]
        },
        "linux": {
            "AzureCLI": [
                {
                    "order": 1,
                    "command": "az login",
                    "description": "Login to Azure account"
                },
                {
                    "order": 2,
                    "command": "az account set --subscription 'subscription-id'",
                    "description": "Set active subscription"
                },
                {
                    "order": 3,
                    "command": "az role assignment create --assignee 'user@domain.com' --role 'Owner' --scope '/'",
                    "description": "Create Owner role assignment at root scope"
                }
            ],
            "ROADtools": [
                {
                    "order": 1,
                    "command": "roadrecon auth -u user@domain.com -p password",
                    "description": "Authenticate with ROADtools"
                },
                {
                    "order": 2,
                    "command": "roadrecon gather",
                    "description": "Gather Azure AD information"
                }
            ]
        }
    }
}
